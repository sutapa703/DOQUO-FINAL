{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",               // OR 'node16' (see next point)
    "moduleResolution": "bundler",      // or 'node16'
    "target": "ES2020",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true
  }
}
